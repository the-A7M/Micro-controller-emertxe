//Don't just copy the codes... Please learn the logic...

#include <xc.h>
#pragma config WDTE = OFF
void main(void) 
{
    TRISB=0x00;
    PORTB=0x00;
    
    int count = 0;
    unsigned long int wait =0;
    while(1)
    {
        if(wait++ == 100000)
        {
            if(count>=0 && count<=7)
            {
                PORTB = PORTB << 1|1;
            }
            else if(count>=8 && count<=15)
            {
                PORTB =PORTB << 1;
            }
            else if(count>=16 && count<=23)
            {
                PORTB = PORTB >> 1 | 0x80;
            }
            else if(count>=24 && count<=31)
            {
                PORTB = PORTB >> 1;
            }
            else
                count = -1;
            count++;
            wait=0;
        }
    }
}
